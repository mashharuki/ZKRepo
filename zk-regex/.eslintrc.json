{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended"],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "script"
    },
    "globals": {
        "process": "readonly",
        "__dirname": "readonly",
        "before": "readonly",
        "it": "readonly",
        "describe": "readonly",
        "BigInt": "readonly"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
